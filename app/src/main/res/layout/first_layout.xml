<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/bijela"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >



        <TextView
            android:id="@+id/naslov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_gravity="left"

            android:text="\n Poglavlje 1\n"/>




        <TextView
            android:id="@+id/uvodAutomati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="@string/uvodOAutomatima"
            android:layout_below="@id/naslov" />

        <TextView
            android:id="@+id/konacniAutomati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uvodAutomati"
            android:textColor="#000000"

            android:text="@string/konacniAutomati"/>
        <ImageView
            android:id="@+id/slikaModela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/konacniAutomati"
            android:src="@drawable/modelkonacnogautomata"/>



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>


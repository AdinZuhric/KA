<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/pitanje4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="\n\nNakon čitanja svih simbola iz ulazne riječi, za NKA kažemo da prihvaća neku riječ, ako:\n\n"/>
    <RadioGroup
        android:id="@+id/rjesenja4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pitanje4"
        android:gravity="center">
        <RadioButton
            android:id="@+id/rb41"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="bar jedan slijed prijelaza završava u prihvatljivom stanju"/>
        <RadioButton
            android:id="@+id/rb42"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="samo ako svi prijelazi završavaju u prihvatljivom stanju"/>

    </RadioGroup>
    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rjesenja4"
        android:text="Dalje"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="odgovor4"
        android:gravity="center"/>

</RelativeLayout>